{{> menu}}
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">Solicitar cambio de contraseña</h2>
        <form>
          <input type="text" class="form-control" id="change-id" disabled="true" style="display: none;" value={{id}}>
          <input type="text" class="form-control" id="change-email-bd" disabled="true" style="display: none;" value={{email}}>
          <div class="mb-3">
            <label for="email" class="form-label">Correo electrónico</label>
            <input type="email" class="form-control text-center" id="change-email" required>
          </div>
          <button type="submit" id="submit-button" class="btn btn-primary w-100">Solicitar</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="module" src="/scripts/changePassword.js"></script>