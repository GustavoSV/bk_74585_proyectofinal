{{> menu}}
<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm p-4">
        <h2 class="text-center mb-4">Cambio de contraseña</h2>
        <form>
          <input type="text" class="form-control" id="change-id" disabled="true" style="display: none;" value={{id}}>
          <div class="mb-3">
            <label for="email" class="form-label">Correo electrónico</label>
            <input type="email" class="form-control text-center" id="change-email" disabled="true" value={{email}}>
          </div>
          <div class="mb-3">
            <label for="verifyCode" class="form-label">Contraseña actual</label>
            <input type="password" class="form-control text-center" id="change-passw-actual" required>
          </div>
          <div class="mb-3">
            <label for="verifyCode" class="form-label">Nueva contraseña</label>
            <input type="password" class="form-control text-center" id="change-passw-nuevo1" required>
          </div>
          <div class="mb-3">
            <label for="verifyCode" class="form-label">Repetir nueva contraseña</label>
            <input type="password" class="form-control text-center" id="change-passw-nuevo2" required>
          </div>
          <button type="submit" id="submit-button" class="btn btn-primary w-100">Cambiar</button>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="module" src="/scripts/newPassword.js"></script>